@model cafeteria.Models.Compra.Producto.ProductoBean

<h2></h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "Producto", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="widget">
          <div class="title"><h6>Detalle Producto</h6></div>
          <div class="formRow">
            <span>Nombre</span>
            <div class = "formRight" > 
                @Html.TextBoxFor(model => model.nombre)
                
            </div><div class="clear"></div>
          </div>

          <div class="formRow">
               <span>Tipo de Producto</span>                             
                
                <div class = "formRight" > 
                    @Html.TextBoxFor(model => model.ID_Tipo)
                </div>      
                <div class = "clear" ></div>
            </div>

          <div class="formRow">
            <span>Descripcion</span>
            <div class="formRight">
                @Html.TextAreaFor(model => model.descripcion) 
            </div><div class="clear"></div>
           </div>
           <div class="formRow">
            <span>Estado</span>
            <div class="formRight">
                @Html.TextAreaFor(model => model.estado) 
            </div><div class="clear"></div>
           </div>

        </div>
        <p>
            <input type="submit" value="Modificar" class = "redB" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
