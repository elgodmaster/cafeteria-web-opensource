@model Cafeteria.Models.Compra.Proveedor.ProveedorxIngredienteBean
@{
    ViewBag.Title = "AñadirIngredientes";
}

<h2>AñadirIngredientes</h2>

<p></p><p></p><p></p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    
  @using (Html.BeginForm("AñadirIngredientes", "Proveedor", FormMethod.Post, new { @class = "form", id = "validate" }))
  {
    @Html.HiddenFor(model => model.idProveedor)
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Proveedor</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.idProveedor)
                <div class=" formRight"> @Html.TextBoxFor(model => model.idProveedor, new { @readonly = "readonly" })  </div>
                <div class="clear"></div>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.nombreProveedor)
                <div class=" formRight"> @Html.TextBoxFor(model => model.nombreProveedor, new { @readonly = "readonly" })  </div>
                <div class="clear"></div>
            </div>
            
            
        </div>
    </fieldset>
    
    <p></p><p></p><p></p><p></p>

        <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>
           <td>IdIngrediente</td>
           <td>Ingrediente</td>
           <td>Precio</td>
        
        </tr>
    </thead>

    <tbody>
    @for (int i = 0; i < Model.listadeIngredientesProveedor.Count; i++)
    {

        if (!Model.listadeIngredientesProveedor[i].Estado_disponible)
        {
         
     <tr>       
                <td> @Html.TextBoxFor(model => model.listadeIngredientesProveedor[i].id, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model.listadeIngredientesProveedor[i].nombre, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model.listadeIngredientesProveedor[i].precio, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", placeholder = "0.00" })         </td>
                   
     </tr>
        }
        else
        {
            @Html.HiddenFor(model => model.listadeIngredientesProveedor[i].id) 
            @Html.HiddenFor(model => model.listadeIngredientesProveedor[i].nombre) 
            @Html.HiddenFor(model => model.listadeIngredientesProveedor[i].precio)         
            
        }
    }

    
    </tbody>

    </table>

        <p>
            <input type="submit" value="Aceptar" class = "redB" />

        </p>    
        
       <a href="javascript:history.back()">Regresar</a>
  }
