@model Cafeteria.Models.Administracion.Usuario.UsuarioxSucursalBean
@{
    ViewBag.Title = "Asignarperfil";
}

<h2>Asignarperfil</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Asignarperfil", "Usuario", FormMethod.Post, new { @class = "form" } ))
{
    <fieldset>
        <div class = "widget" >
            <div class = "title" >
                <img src="@Url.Content("~/Content/images/icons/dark/list.png")"  class="titleIcon">
                <h6>@ViewBag.Title</h6>
            </div>
            
             
            <div class = "formRow" >
                @Html.LabelFor( model => model.nombres)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.nombres)
                    
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.apPat )
                <div class = "formRight" >
                    @Html.TextBoxFor( model => model.apPat )
                  
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.apMat )
                <div class = "formRight" >
                    @Html.TextBoxFor( model => model.apMat )
                    
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.nroDocumento )
                <div class = "formRight" >
                    @Html.TextBoxFor( model => model.nroDocumento )
                    
                </div>
                <div class = "clear" ></div>
            </div>
             
             @*<input type="checkbox" checked="checked" name="check1" id="check1" /><label for="check1">Checked checkbox</label>*@
             <div class = "formRow" >
                @Html.LabelFor( model => model.perfil )
                <div class = "formRight" >
                    @for (int i = 0; i < Model.perfilesdelusuario.Count; i++)
                    {
                        @Html.CheckBoxFor(model => model.PerfilesUsuario[i].estado, true);
                        @*@Html.TextBoxFor(model => model.nroDocumento)  *@  
                    }

                    
                    
                </div>
                <div class = "clear" ></div>
            </div>


        </div>

        <p>
            <input class = "redB" type="submit" value="Guardar" /> |
            <a href="javascript:history.back()">Regresar</a>
        </p>
    </fieldset>
}
