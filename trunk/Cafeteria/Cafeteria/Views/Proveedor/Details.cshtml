@model Cafeteria.Models.Compra.Proveedor.ProveedorBean

@{
    ViewBag.Title = "Registrar Proveedor";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true)
@using (Html.BeginForm("Edit", "Proveedor", FormMethod.Post, new { @class = "form" }))
{
  
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Detalle Proveedor</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.razonSocial)
                <div class="formRight">
                    @Html.TextBoxFor(model => model.razonSocial) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.ruc)
                <div class="formRight"> @Html.TextBoxFor(model => model.ruc)</div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.direccion)
                <div class="formRight"> @Html.TextBoxFor(model => model.direccion) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.telefono1)
                 
                <div class="formRight"> @Html.TextBoxFor(model => model.telefono1) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.telefono2)
                 
                <div class="formRight"> @Html.TextBoxFor(model => model.telefono2) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.web)
                <div class="formRight"> @Html.TextBoxFor(model => model.web) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.contacto)
                <div class="formRight"> @Html.TextBoxFor(model => model.contacto)</div>
                <div class="clear"></div>
            </div>
                
            <div class="formRow">@Html.LabelFor(model => model.telefono_contacto)
                <div class="formRight"> @Html.TextBoxFor(model => model.telefono_contacto) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.email_contacto)
                <div class="formRight"> @Html.TextBoxFor(model => model.email_contacto) </div>
                <div class="clear"></div>
            </div>
            
            <div class="formRow">@Html.LabelFor(model => model.Observacion)
                <div class="formRight"> @Html.TextAreaFor(model => model.Observacion, new { maxlength = "45" }) </div>
                <div class="clear"></div>
            </div>            
            
        </div>
    </fieldset>

     <p>
        <input type="submit" value="Editar" class = "redB" />        
        <a href="javascript:history.back()">Regresar</a>
    </p>
}
