@model Cafeteria.Models.Venta.Venta.VentaBean

@{
    ViewBag.Title = "Registrar Venta";
}

<h2>@ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Venta", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <div class = "widget" >
            <div class = "title"><h6>Registrar Venta</h6></div>

          <div class="formRow">
               <span>Sucursal</span>                             
                
                <div class = "formRight" > 
                    @Html.DisplayFor(model => model.nombresucursal)
                </div>      
                <div class = "clear" ></div>
            </div>

          <div class="formRow">
               <span>Fecha Registro</span>                             
                
                <div class = "formRight" > 
                    @Html.DisplayFor(model => model.fecharegistro)
                </div>      
                <div class = "clear" ></div>
          </div>

        </div>
    </fieldset>
    <p>
        <input type="submit" value="Registrar" class = "redB" />
        <p></p>
        <p></p>
        <a href="javascript:history.back()">Regresar</a> 
    </p>
}